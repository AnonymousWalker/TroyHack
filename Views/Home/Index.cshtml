@model HomeViewModel
@{
    ViewBag.Title = "Home4Pet";
}

<style>
    .body-container {
        margin: 15px;
        height: 100%;
        background-color: #d9d4d4;
    }

    .col-flex {
        display: flex;
    }

        .col-flex::after {
            content: "";
            display: table;
            clear: both;
        }

    .row-flex {
        display: flex;
        flex-direction: column;
    }

        .row-flex::after {
            content: "";
            display: table;
            clear: both;
        }

    .left-nav-bar {
        height: 100%;
        width: 100px;
        position: fixed;
        background-color: cornflowerblue;
    }

    .main-img-group {
        padding: 20px;
    }

        .main-img-group img {
            width: 100%;
            height: 100%;
        }

    .detail-group {
        padding: 20px;
    }
</style>

<div class="body-container container-fluid">
    <div class="row" style="height:100%;">
        <div class="left-nav-bar">
            <p>Nav</p>
        </div>
        @foreach (var post in Model.Posts)
        {
            Html.RenderPartial("Partial/_PostView", post);
        }

    </div>

</div>